<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/iniciales_recibido"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="AC"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/mensajeTxt_recibido"
            android:layout_width="212dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:autoSizeMaxTextSize="15dp"
            android:autoSizeMinTextSize="2dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/mensaje_recibido"
            android:padding="6dp"
            android:text="Hola, ¿Cómo estás?"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            tools:visibility="visible"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>