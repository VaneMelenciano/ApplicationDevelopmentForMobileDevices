<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/display"
        android:gravity="right"
        android:background="@color/black"
        android:textColor="@color/white"
        android:padding="16dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:text="@string/clear"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
                <Button
                    android:id="@+id/btnSiete"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:text="7"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/btnOcho"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="8"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/btnNueve"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="9"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/btnDivision"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="1dp"
                    android:text="/"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>
            </LinearLayout>

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"><!-- FALTA AQUI -->
                    <Button
                        android:id="@+id/btnCuatro"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:text="4"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/btnCinco"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:text="5"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/btnSeis"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:text="6"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/btnMultiplicacion"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="1dp"
                        android:text="*"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
            </LinearLayout>

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"><!-- FALTA AQUI -->
                    <Button
                        android:id="@+id/btnUno"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:text="1"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/btnDos"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:text="2"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/btnTres"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:text="3"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/btnResta"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="1dp"
                        android:text="-"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
            </LinearLayout>

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                    <Button
                        android:id="@+id/btnCero"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:text="0"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/btnPunto"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:text="."
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/btnIgual"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:text="="
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/btnSuma"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="1dp"
                        android:text="+"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
            </LinearLayout>

</LinearLayout>